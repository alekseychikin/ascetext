{
  "extends": [
    "esnext"
  ],
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true
  },
  "rules": {
    "no-empty": ["error", { "allowEmptyCatch": true }],
    "no-cond-assign": "off",
    "no-use-before-define": ["error", { "functions": true, "variables": true, "classes": false }],
    "class-methods-use-this": "off",
    "no-loop-func": "off"
  }
}
